{
  "compilerOptions": {
    // File Layout
    // "rootDir": "./",
    // "outDir": "./",
    
    // Environment Settings
    "module": "amd",
    "target": "es6",
    "outFile": "./main.js",
    "types": [],

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Recommended Options
    "strict": true,
    "jsx": "react-jsx",
    // "verbatimModuleSyntax": true,
    // "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "skipLibCheck": true
  },
  "include": [
    "interfaces"
  ] 
}